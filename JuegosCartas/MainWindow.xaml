<Window x:Class="JuegosCartas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuegosCartas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Background="CornflowerBlue" x:Name="PantallaPrincipal">
        <Grid x:Name="LayoutPrincipal">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Row="0" Grid.Column="0" Background="CornflowerBlue" Margin="2,2,2,2" MouseDown="Celda_Click" Grid.ColumnSpan="2">
                <TextBlock Text="c" FontSize="80" FontFamily="Webdings" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" />
            </DockPanel>
            <DockPanel Grid.Row="0" Grid.Column="2" Background="CornflowerBlue" MouseDown="Celda_Click" Margin="2,2,2,2"  IsHitTestVisible="True" >
                <TextBlock Text="c" FontSize="80" FontFamily="Webdings" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" />
            </DockPanel>
            <DockPanel Grid.Row="0" Grid.Column="3" Background="CornflowerBlue" MouseDown="Celda_Click" Margin="2,2,2,2"  IsHitTestVisible="True">
                <TextBlock Text="c" FontSize="80" FontFamily="Webdings" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" />
            </DockPanel>
            <DockPanel Grid.Row="0" Grid.Column="4" Background="CornflowerBlue" Margin="2,2,2,2"  MouseDown="Celda_Click"  IsHitTestVisible="True">
                <TextBlock Text="c"  FontSize="80" FontFamily="Webdings" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" />
            </DockPanel>

            <!-- Segunda fila -->
            <DockPanel Grid.Row="1" Grid.Column="0" Background="CornflowerBlue" Margin="2,2,2,2" Grid.ColumnSpan="2"  MouseDown="Celda_Click"  IsHitTestVisible="True"> 
                <TextBlock  Text="c"  FontSize="80" FontFamily="Webdings" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" />
            </DockPanel>
            <DockPanel Grid.Row="1" Grid.Column="2" Background="CornflowerBlue" Margin="2,2,2,2" MouseDown="Celda_Click"  IsHitTestVisible="True" >
                <TextBlock  Text="c" FontSize="80" FontFamily="Webdings" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" />
            </DockPanel>
            <DockPanel Grid.Row="1" Grid.Column="3" Background="CornflowerBlue" Margin="2,2,2,2" MouseDown="Celda_Click"  IsHitTestVisible="True">
                <TextBlock  Text="c" FontSize="80" FontFamily="Webdings" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" />
            </DockPanel>
            <DockPanel Grid.Row="1" Grid.Column="4" Background="CornflowerBlue" Margin="2,2,2,2" MouseDown="Celda_Click">
                <TextBlock  Text="c"  FontSize="80" FontFamily="Webdings" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" />
            </DockPanel>

            <!-- Tercera fila -->
            <DockPanel Grid.Row="2" Grid.Column="0" Background="CornflowerBlue" Margin="2,2,2,2"  MouseDown="Celda_Click" Grid.ColumnSpan="2">
                <TextBlock  Text="c"  FontSize="80" FontFamily="Webdings" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" />
            </DockPanel>
            <DockPanel Grid.Row="2" Grid.Column="2" Background="CornflowerBlue"  MouseDown="Celda_Click" Margin="2,2,2,2">
                <TextBlock  Text="c"  FontSize="80" FontFamily="Webdings" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" />
            </DockPanel>
            <DockPanel Grid.Row="2" Grid.Column="3" Background="CornflowerBlue"  MouseDown="Celda_Click" Margin="2,2,2,2">
                <TextBlock  Text="c"  FontSize="80" FontFamily="Webdings" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" />
            </DockPanel>
            <DockPanel Grid.Row="2" Grid.Column="4" Background="CornflowerBlue"  MouseDown="Celda_Click" Margin="2,2,2,2" >
                <TextBlock  Text="c"  FontSize="80" FontFamily="Webdings" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" />
            </DockPanel>

            <!-- Cuarta fila -->
            <DockPanel Grid.Row="3" Grid.Column="0" Background="CornflowerBlue" Margin="2,2,2,2" Grid.ColumnSpan="2"  MouseDown="Celda_Click">
                <TextBlock Text="c"  FontSize="80" FontFamily="Webdings" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" />
            </DockPanel>
            <DockPanel Grid.Row="3" Grid.Column="2" Background="CornflowerBlue" Margin="2,2,2,2" MouseDown="Celda_Click">
                <TextBlock Text="c"  FontSize="80" FontFamily="Webdings" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" />
            </DockPanel>
            <DockPanel Grid.Row="3" Grid.Column="3" Background="CornflowerBlue" Margin="2,2,2,2"  MouseDown="Celda_Click">
                <TextBlock  Text="c"  FontSize="80" FontFamily="Webdings" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" />
            </DockPanel>
            <DockPanel Grid.Row="3" Grid.Column="4" Background="CornflowerBlue" Margin="2,2,2,2" MouseDown="Celda_Click">
                <TextBlock  Text="c"  FontSize="80" FontFamily="Webdings" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" />
            </DockPanel>
        </Grid>
    </DockPanel>
    
</Window>
